<% provide(:title, "Войти") %>
<h1>Войти</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %><br />

      <%= f.submit "Войти", class: "btn btn-large btn-primary" %>
    <% end %>

    Новый пользователь? <%= link_to "Зарегистрироваться!", signup_path %>
  </div>
</div>